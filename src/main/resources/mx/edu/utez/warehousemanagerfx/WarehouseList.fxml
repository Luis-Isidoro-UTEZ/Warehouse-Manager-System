<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="910.0"
      styleClass="root" stylesheets="@styles/WarehouseList.css"
      xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="mx.edu.utez.warehousemanagerfx.WarehouseController">
    <HBox prefWidth="910.0">
        <VBox alignment="CENTER" prefWidth="300.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <ImageView fx:id="img" fitHeight="180.0" fitWidth="260.0">
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
                <clip>
                    <Rectangle fx:id="imgBorder" arcHeight="20.0" arcWidth="20.0" height="220.0" width="260.0"/>
                </clip>
            </ImageView>
        </VBox>
        <VBox alignment="CENTER" prefWidth="610.0">
            <HBox.margin>
                <Insets/>
            </HBox.margin>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Label styleClass="label-warehouse-list" fx:id="name" prefHeight="50.0" prefWidth="570.0" text="Name: ">
                <VBox.margin>
                    <Insets bottom="20.0"/>
                </VBox.margin>
            </Label>
            <Label fx:id="price" styleClass="label-warehouse-list" prefHeight="50.0" prefWidth="570.0"
                   text="Price: $$$">
                <VBox.margin>
                    <Insets bottom="20.0"/>
                </VBox.margin>
            </Label>
            <HBox prefHeight="40.0" prefWidth="200.0">
                <VBox prefHeight="40.0" prefWidth="250.0">
                    <HBox.margin>
                        <Insets right="5.0"/>
                    </HBox.margin>
                    <Label fx:id="size" styleClass="label-warehouse-list" prefHeight="40.0" prefWidth="250.0"
                           text="Size: ">
                        <VBox.margin>
                            <Insets/>
                        </VBox.margin>
                    </Label>
                </VBox>
                <VBox layoutX="10.0" layoutY="10.0" prefHeight="40.0" prefWidth="200.0">
                    <HBox.margin>
                        <Insets left="5.0" right="5.0"/>
                    </HBox.margin>
                    <Label fx:id="status" styleClass="label-warehouse-list" prefHeight="50.0" prefWidth="250.0"
                           text="Status">
                        <VBox.margin>
                            <Insets/>
                        </VBox.margin>
                    </Label>
                </VBox>
                <VBox alignment="CENTER" prefHeight="40.0" prefWidth="105.0">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                    <Button fx:id="moreButton" styleClass="button-warehouse-list" mnemonicParsing="false"
                            prefHeight="40.0" prefWidth="100.0" text="Show More"/>
                </VBox>
            </HBox>
        </VBox>
    </HBox>
</Pane>
